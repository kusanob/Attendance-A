<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <div class="btn-users-show">
          <%= link_to "⇦ ", user_path(date: @first_day.prev_month), class: "btn btn-primary" %>
          【<%= l(@first_day, format: :middle) %>】勤怠管理表
          <%= link_to "⇨", user_path(date: @first_day.next_month), class: "btn btn-primary" %>
        </div>
      </td>
      <td>
        指定勤務開始時間：<%= format_basic_info(@user.work_time) %><br>
        指定勤務終了時間：<%= format_basic_info(@user.basic_time) %>
      </td>
      <td colspan="3">基本時間：<%= format_basic_info(@user.work_time) %></td>
      <td>初日：<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>名前：<%= @user.name %></td>
      <td>コード</td>
      <td></td>
      <td>出勤日数：<%= @worked_sum %>日</td>
      <td>締め日：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<%= link_to "勤怠編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>

<div>
  <table class="table table-bordered table-condensed table-hover"   id="table-attendances">
    <thead>
      <tr>
        <th rowspan="3">残業申請</th>
        <th rowspan="3">日付</th>
        <th rowspan="3">曜日</th>
        <th colspan="8">【実績】</th>
        <th colspan="5">指定外出勤</th>
      </tr>
      <tr>
        <td colspan="3">出社</td>
        <td colspan="3">退社</td>
        <td rowspan="2">在社時間</td>
        <td rowspan="2">備考</td>
        <td colspan="2">終了予定時間</td>
        <td rowspan="2">時間外時間</td>
        <td rowspan="2">業務処理内容</td>
        <td rowspan="2">支持者確認㊞</td>
      </tr>
      <tr>
        <td>時</td>
        <td>分</td>
        <td></td>
        <td>時</td>
        <td>分</td>
        <td></td>
        <td>時</td>
        <td>分</td>
      </tr>
    </thead>
    <tbody>
      <% @attendances.each do |day| %>
        <% css_class=case %w{日 月 火 水 木 金 土}[day.worked_on.wday]
                          when '土'
                         'text-primary'
                          when '日'
                         'text-danger'
                         end %>
        <tr>
          <td></td>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td class="<%= css_class %>"><%= $days_of_the_week[day.worked_on.wday] %></td>
          <td><%= l(day.started_at, format: :hour) if day.started_at.present? %></td>
          <td><%= l(day.started_at, format: :min) if day.started_at.present? %></td>
          <td>
            <% if btn_text = attendance_state(day) %>
              <%=link_to "#{btn_text}登録", user_attendance_path(@user, day),
                 method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td><%= l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
          <td><%= l(day.finished_at, format: :min) if day.finished_at.present? %></td>
          <td>
            <% if btn_text = attendance_finish(day) %>
              <%=link_to "#{btn_text}登録", user_attendance_path(@user, day),
                 method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td><% if day.started_at.present? && day.finished_at.present? %>
                <%= str_times = working_times(day.started_at, day.finished_at) %>
                <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
              <% end %>
          </td>
          <td><%= day.note %></td>
          <td></td>
          <td>
          </td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  
    <tfoot>
      <!--rowspan:縦結合、colspan：横結合-->
      <tr>
        <td colspan="9"></td>
        <td><%= format("%.2f", @total_working_times.to_f) %></td>
        <td colspan="5"></td>
        <td></td>
      </tr>
    </tfoot>    
  </table>
  
 </div>