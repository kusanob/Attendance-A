<% provide(:title, 'ユーザー一覧') %>
<h1>ユーザー一覧</h1>
<div class= "col-sm-4" >
<%= form_tag import_users_path, multipart: true do %>
  <div class="input-group">
    <%= file_field_tag :file %>
    <%= submit_tag "CSVをインポート", class: "btn btn-primary btn-block btn btn-csv" %>
  </div>
<% end %>
</div>

<div class="col-md-10 col-md-offset-1">
    <% @users.each do |user| %>
    <tabele class= "user_index_edit">
      <br>
      <tr>
        <%= user.name %>
      </tr>
      <br>
      <tr>
       | <%= link_to "削除", user, method: :delete,
              data: { confirm: "本当に削除してよろしいですか？",
                      cancel: "キャンセル",
                      commit: "削除"}, 
                      title: "#{user.name}のデータを削除します",
                      class: "btn btn-primary"%>
      </tr>
      <tr>
        <%= render "user_edit" %>
      </tr>
    </table>
    <% end %>
 
  <%= will_paginate %>
</div>