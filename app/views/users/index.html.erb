<% provide(:title, 'ユーザー一覧') %>
<h1>ユーザー一覧</h1>

<div class="col-md-10 col-md-offset-1">
  <%= will_paginate %>
  <table id="table-users">
    
    <% @users.each do |user| %>
      <tr>
        <th>
          <%= user.name %>
        </th>
      </tr>
      <tr>
        <td>
          | <%= link_to "削除", user, method: :delete,
                data: { confirm: "削除してよろしいですか？" },
                class: "btn btn-primary" %>
        </td>
      </tr>
      <tr>
　      <td>
          <%= link_to "編集", "#", class: "btn btn-primary" %>
        </td>
      </tr>
      
    <% end %>
  </table>
  <%= will_paginate %>
</div>