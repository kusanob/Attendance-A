<div class="panel-group" id="accordion">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <button type="button" class="btn btn-lg btn-primary" data-toggle="collapse" data-parent="#accordion" href="#collapse">
          拠点情報追加
        </button>
      </h4>
    </div>
    <div id="collapse" class="panel-collapse collapse">
      <div class="panel-body">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @bace, local: true) do |f| %>
            
            <%= f.label :bace_number, "拠点番号", class: "label-new" %>
            <%= f.text_field :bace_number, class: "form-control" %>
      
            <%= f.label :bace_name, "拠点名", class: "label-new" %>
            <%= f.text_field :bace_name, class: "form-control" %>

            <%= f.label :bace_type, "拠点種類", class: "label-new" %>
            <%= f.text_field :bace_type, class: "form-control" %>

            <%= f.submit "作成", class: "btn btn-primary btn-block btn btn-new" %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

